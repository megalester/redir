{
  "version": 3,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/admin", "dest": "/public/admin/index.html" },
    { "src": "/", "dest": "/public/index.html" }
  ]
}
